#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "${YELLOW}üìù Running pre-commit checks...${NC}"

# Format staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR | grep -E '\.(js|jsx|ts|tsx|json|css|scss|md)$' || true)

if [ -n "$STAGED_FILES" ]; then
  echo "${YELLOW}üé® Running Prettier...${NC}"
  # Run Prettier once for all files
  if ! npx prettier --write $STAGED_FILES --ignore-unknown; then
    echo "${RED}‚ùå Prettier formatting failed${NC}"
    exit 1
  fi
  
  # Add formatted files back to staging
  git add $STAGED_FILES
  echo "${GREEN}‚úì Files formatted successfully${NC}"
else
  echo "${YELLOW}No files to format${NC}"
fi

# Run TypeScript check only if there are .ts or .tsx files
if echo "$STAGED_FILES" | grep -qE '\.tsx?$'; then
  echo "${YELLOW}üîç Running TypeScript check...${NC}"
  if ! npx tsc --noEmit --skipLibCheck; then
    echo "${RED}‚ùå TypeScript check failed${NC}"
    exit 1
  fi
  echo "${GREEN}‚úì TypeScript check passed${NC}"
fi

echo "${GREEN}‚úÖ All checks passed!${NC}"