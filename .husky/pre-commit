#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run prettier and linting checks
echo "Running pre-commit checks..."
npx lint-staged || {
  echo "❌ Prettier/ESLint checks failed"
  exit 1
}

# Type checking
echo "Running type checking..."
npm run check || {
  echo "❌ Type checking failed"
  exit 1
}

# Success message
echo "✅ All pre-commit checks passed"
