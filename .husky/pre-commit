#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Helper function for printing status
print_status() {
  echo "${BLUE}[$(date +%T)]${NC} $1"
}

print_status "ğŸ” Starting pre-commit hooks..."

# Check for unstaged changes
if ! git diff --quiet; then
  echo "${YELLOW}âš ï¸  Warning: You have unstaged changes${NC}"
  echo "${YELLOW}ğŸ’¡ Tip: Stage or stash them to ensure clean commits${NC}"
fi

# Run lint-staged for code formatting and linting
print_status "ğŸ¨ Running lint-staged checks..."
if ! npx lint-staged; then
  echo "${RED}âŒ lint-staged checks failed${NC}"
  exit 1
fi

# Run TypeScript type checking
print_status "ğŸ” Running TypeScript checks..."
if ! npx tsc --noEmit --skipLibCheck; then
  echo "${RED}âŒ TypeScript check failed${NC}"
  exit 1
fi

print_status "${GREEN}âœ… All checks completed successfully!${NC}"
