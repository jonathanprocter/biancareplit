
#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Check for staged files
STAGED_FILES=$(git diff --cached --name-only)
if [ -z "$STAGED_FILES" ]; then
  echo "No files staged for commit. Skipping checks."
  exit 0
fi

# Run Prettier
echo "Running Prettier..."
npx pretty-quick --staged
if [ $? -ne 0 ]; then
  echo "âŒ Prettier check failed"
  echo "ğŸ’¡ Run 'npm run format' to fix formatting issues"
  exit 1
fi

# Run ESLint on staged files
echo "Running ESLint..."
git diff --cached --name-only | grep -E '\.(ts|tsx|js|jsx)$' | xargs npx eslint --fix
if [ $? -ne 0 ]; then
  echo "âŒ ESLint check failed"
  echo "ğŸ’¡ Fix the linting issues before committing"
  exit 1
fi

# Run TypeScript type check
echo "Running type check..."
npm run check
if [ $? -ne 0 ]; then
  echo "âŒ Type check failed"
  echo "ğŸ’¡ Fix type errors before committing"
  exit 1
fi

# Run tests related to changed files
echo "Running related tests..."
CHANGED_FILES=$(git diff --cached --name-only | grep -E '\.(ts|tsx|js|jsx)$' || true)
if [ -n "$CHANGED_FILES" ]; then
  npx jest --findRelatedTests --passWithNoTests $CHANGED_FILES
  if [ $? -ne 0 ]; then
    echo "âŒ Tests failed"
    echo "ğŸ’¡ Fix failing tests before committing"
    exit 1
  fi
fi

echo "âœ… All checks passed!"
