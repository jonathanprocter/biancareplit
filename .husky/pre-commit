#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "${YELLOW}üìù Running pre-commit checks...${NC}"

# Get staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR | grep -E '\.(js|jsx|ts|tsx|json|css|scss|md)$' || true)

if [ -n "$STAGED_FILES" ]; then
  # Run Prettier on staged files
  echo "${YELLOW}üé® Running Prettier...${NC}"
  error=0
  for file in $STAGED_FILES; do
    if [ -f "$file" ]; then
      if ! npx prettier --write "$file" >/dev/null 2>&1; then
        echo "${RED}‚ùå Failed to format $file${NC}"
        error=1
      else
        echo "${GREEN}‚úì Formatted $file${NC}"
        git add "$file"
      fi
    fi
  done
  
  if [ $error -ne 0 ]; then
    echo "${RED}‚ùå Some files failed to format. Please check the errors above.${NC}"
    exit 1
  fi
else
  echo "${YELLOW}No files to format${NC}"
fi

# Check TypeScript types
echo "${YELLOW}üîç Running TypeScript type check...${NC}"
if ! npx tsc --noEmit --skipLibCheck; then
  echo "${RED}‚ùå TypeScript check failed. Please fix the type errors.${NC}"
  exit 1
fi

echo "${GREEN}‚úÖ All checks passed!${NC}"