{
  "*.{js,jsx,ts,tsx}": [
    "prettier --write",
    "eslint --fix --max-warnings=0",
    "jest --bail --findRelatedTests --passWithNoTests --verbose",
    "tsc --noEmit --pretty"
  ],
  "*.{css,scss}": [
    "prettier --write", 
    "stylelint --fix"
  ],
  "*.{json,md,yml,yaml,html}": [
    "prettier --write"
  ],
  "*.test.{ts,tsx}": [
    "jest --bail --findRelatedTests --passWithNoTests --verbose"
  ],
  "*.{ts,tsx}": [
    "tsc --noEmit --pretty"
  ]
}